<%= form_with(model: @user, local: true) do |f| %>
		<%= render 'shared/error_messages' %>
		<h3><b> Loại tài khoản: B2 </b> </h3>
		<%= f.hidden_field :tk, :value => 'B2' %>
		<%= f.hidden_field :permission, :value => 'false' %>
		<%= f.label :ID %>
		<%= f.number_field :accountname, min: 01010101, max:63999999, step: 1 %>
		<%= f.label :'Mật khẩu' %>
		<%= f.password_field :password %>
		<%= f.label :'Nhập lại mật khẩu', "Confirmation" %>
		<%= f.password_field :password_confirmation %>
		<%= f.label :'Khu vực' %>
		<%= f.text_field :region %>
		<%= f.submit "Thêm tài khoản mới", class: "btn btn-primary" %>
	<% end %>